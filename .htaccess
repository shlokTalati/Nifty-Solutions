# Inner .htaccess for public_html/Nifty-Solutions folder
# Serves static files directly, routes everything else to index.php

RewriteEngine On
RewriteBase /

# Serve static files from Nifty-Solutions/public/ if they exist
RewriteCond %{REQUEST_URI} ^/(Nifty-Solutions/)?public/
RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI} -f
RewriteRule ^ - [L]

# Return 404 for missing /public/ files (do not route to index.php)
RewriteCond %{REQUEST_URI} ^/(Nifty-Solutions/)?public/
RewriteRule ^ - [R=404,L]

# If we're already at index.php, don't rewrite again (prevents infinite loop)
RewriteRule ^index\.php$ - [L]

# Route everything else to index.php
RewriteRule ^(.*)$ /index.php [QSA,L]

# Optional: Compression (comment out if not needed)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Optional: Browser caching (comment out if not needed)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
</IfModule>