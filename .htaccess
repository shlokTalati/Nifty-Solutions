RewriteEngine On
RewriteBase /

# Dont apply rules for the subdomain
RewriteCond %{HTTP_HOST} ^renewalportal\.niftysolutions\.co\.in$ [NC]
RewriteRule ^ - [L]

# Allow direct access ONLY to public/ folder and its contents (if still needed)
RewriteCond %{REQUEST_URI} ^/public/
RewriteRule ^ - [L]

# Funnel all other requests to index.php
RewriteRule ^ index.php [L,QSA]